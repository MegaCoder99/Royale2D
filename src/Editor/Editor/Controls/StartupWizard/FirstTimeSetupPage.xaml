<Page x:Class="Editor.FirstTimeSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="First Time Setup">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome! Choose an option to continue." FontSize="16" Margin="0,0,0,20"/>
            <Button Content="Open Existing Workspace" Click="OpenExistingWorkspace_Click" Width="200" Margin="5"/>
            <Button Content="Create New Workspace" Click="CreateNewWorkspace_Click" Width="200" Margin="5"/>
            <Button Content="Exit" Click="Exit_Click" Width="200" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>