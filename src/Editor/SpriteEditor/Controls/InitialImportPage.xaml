<Page x:Class="SpriteEditor.InitialImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Editor"
      Title="New Sprite Workspace: Import Spritesheet">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <local:FileFolderBrowserControl x:Name="spritesheetFileControl" Width="550" Label="Spritesheet Image File" />
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10">
            <Button Content="Submit" Click="Submit_Click" Width="150" Margin="5"/>
            <Button Content="Back" Click="Back_Click" Width="150" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>